<div class="container">
    <h2>Upload QCM Exam</h2>
    <label>Exam Name</label>
    <input type="text" id="examName">

    <label>Exam Date</label>
    <input type="date" id="examDate">

    <label>Duration (minutes)</label>
    <input type="number" id="examDuration">

    <label>Upload CSV File</label>
    <input type="file" id="qcmFile" accept=".csv">

    <button onclick="handleUpload()">Save Exam</button>
    <p id="successMsg">Exam saved successfully!</p>
  </div>
